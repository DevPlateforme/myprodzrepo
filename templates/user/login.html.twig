{% extends 'base.html.twig' %}


{% block body %}

    <h1>Login</h1>


    <form action= "{{ path('loginPath') }}" method='post'>

         <div class = 'form-group'>
             <input type='text' placeholder='username' required name='_username'>
          </div>

          
         <div class = 'form-group'>
             <input type='password' placeholder='password' required name='_password'>
          </div>



          <div class = 'form-group'>
               <button type = 'submit' class = 'btn btn-success'>Login</button>
          </div>



    </form>



{% endblock %}
