{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<br>

<form>

<label>Comment se nomme le projet?</label> </br>

<input type = 'text' placeholder='Nom du projet'>


</br>

<label>Type de projet</label> </br>

<select name="projectDuration" id="projectForm">
  <option>Type de projet</option>
  <option value="ponctual">Ponctuel (10 heures)</option>
  <option value="midTerm">Moyen terme (100 heures)</option>
  <option value="longTerm">Long terme (300 heures)</option>
</select>

</br>


<label>Durée à réaliser chaque jour</label> </br>

<select name="dailyWorkToDo" id="projectForm">
  <option>Compte journalier</option>
  <option value="dailyCount1">15 min</option>
  <option value="dailyCount2">45 min</option>
  <option value="dailyCount3">2 heures</option>
</select>

</br>
</br>

<button type = 'submit' class = 'btn btn-success'>Créer projet</button>


</form>
{% endblock %}
